<AnchorPane fx:id="InstructionsRoot" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.makery.fishGame.view.InstructionsController">
    <ImageView fitHeight="600.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="false" >
        <image>
            <Image url="@../../../../images/oceanBackground.jpg" />
        </image>
    </ImageView>

    <TextField fx:id="usernameField" alignment="CENTER" layoutX="300.0" layoutY="427.0" promptText="Enter your name" />

    <Button layoutX="329.0" layoutY="472.0" mnemonicParsing="false" onAction="#handleStartGame" prefHeight="45.0" prefWidth="129.0" styleClass="normalButton" text="START GAME" />
   <VBox alignment="CENTER_LEFT" layoutX="75.0" layoutY="145.0" prefHeight="254.0" prefWidth="650.0" spacing="20.0" styleClass="normalText">
      <children>
         <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="normalText" text="1. Enter your name.">
            <font>
               <Font size="21.0" />
            </font>
         </Text>
         <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="normalText" text="2. Press spacebar to swim upwards.">
            <font>
               <Font size="21.0" />
            </font>
         </Text>
         <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="normalText" text="3. Crashing into corals or the ocean floor will end the game.">
            <font>
               <Font size="21.0" />
            </font>
         </Text>
         <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="normalText" text="4. Swim and survive as long as you can.">
            <font>
               <Font size="21.0" />
            </font>
         </Text>
         <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="normalText" text="5. Happy swimming Under The Sea!">
            <font>
               <Font size="21.0" />
            </font>
         </Text>
      </children>
   </VBox>
   <Label alignment="CENTER" layoutX="356.0" layoutY="86.0" styleClass="heading2" text="How To Play?" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0" />
</AnchorPane>
